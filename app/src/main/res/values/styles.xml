<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textFontWeight">600</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/mainCornerRadiusBtn</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/mainIconPadding</item>
        <item name="iconTint">@color/colorBlackText</item>
        <item name="font">@font/ys_display_medium</item>
    </style>
    <style name="backgroundColorSettings">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="appNameMain">
        <item name="android:text">@string/title</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="font">@font/ys_display_medium</item>
    </style>
    <style name="smallContainerSetting">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="font">@font/ys_display_regular</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="buttonDarkTheme">
        <item name="android:iconTint">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="titleSettings">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="font">@font/ys_display_medium</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:text">@string/settings</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="titleSearch">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="font">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:text">@string/titleSearch</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="backgroundColorMain">
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
    </style>
    <style name="searchField">
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">@dimen/mainIconPadding</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/mainIconPadding</item>
        <item name="iconTint">@color/colorBlackText</item>
        <item name="font">@font/ys_display_medium</item>
    </style>
</resources>
